<%= form_for(@curriculum, html: { role: "form"}) do |f| %>
  <% if @curriculum.errors.any? %>
  <h3>入力した内容にエラーが<%= @curriculum.errors.count %>件あります</h3>
  <ul>
    <% for message in @curriculum.errors.full_messages %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="field">
    <%= f.label :カリキュラム名 %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :説明 %><br>
    <%= f.text_area :description, cols: 40, rows: 20, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit '登録', class: "btn btn-default", role: "button"%>
  </div>
<% end %>
